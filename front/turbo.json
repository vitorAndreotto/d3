{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "dev": {
            "cache": false,
            "dependsOn": ["^dev"],
            "env": ["PORT", "HOSTNAME"],
            "outputs": []
        },
        "start": {
            "cache": false,
            "dependsOn": ["build"]
        },
        "lint": {
            "cache": true
        },
        "test": {
            "cache": true,
            "dependsOn": ["^test"]
        }
    }
}