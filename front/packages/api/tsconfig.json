{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@front/api": ["./src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}